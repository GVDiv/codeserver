<span class="bg-warning-subtle p-2 text-center display-6" style="letter-spacing: 5px; font-weight: 400; display:block">Products</span>
<div class="container-fluid p-4" 
      style="height: 87vh;
             background-image: url('https://images.pexels.com/photos/347139/pexels-photo-347139.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
             background-size: cover;
             filter:opacity(0.9);
             overflow:scroll">
  <div class="row"> 
    {{#each products}}
      <div class="col-md-4 mb-4">
        <div class="card">
          {{#if this.photo}}
          <img src={{this.photo}} style="height: 18rem" class="card-img-top object-fit-cover" alt="..."/>
          {{else}}
          <p>
            Not Found
          </p>
          {{/if}}
          <div class="card-body d-flex flex-row flex-wrap justify-content-around" 
                style="align-items: center;">
            <h5 class="card-title" 
                style="font-size: 1rem;
                       font-family: sans-serif;
                       letter-spacing: 2px;           
                       ">{{this.title}}</h5>
              <a class="btn btn-primary" type="button" href="products/{{this.id}}">
                detail
              </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
